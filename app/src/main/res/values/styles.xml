<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColor</item>
        <item name="colorAccent">@color/primaryColor</item>
    </style>

    <style name="NoTitleFullScreen" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ClickerButtonBaseStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/mainForegroundColor</item>
        <item name="android:onClick">buyAutoClicker</item>
    </style>

</resources>
